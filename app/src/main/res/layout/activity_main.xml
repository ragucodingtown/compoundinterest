<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.codingtown.compoundinterest.MainActivity"
    android:background="#b0dff5">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="COMPOUND INTEREST CALCULATOR"
        android:textColor="#02026a"
        android:textSize="18sp"
        android:textStyle="bold"
        android:id="@+id/ts" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:layout_alignLeft="@+id/ts"
        android:layout_alignStart="@+id/ts"
        android:layout_below="@+id/ts">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.03"
            android:weightSum="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:text="AMOUNT"
                android:id="@+id/textView1"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="#030b4c"
                android:layout_weight="0.28" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/t1"
                android:inputType="numberDecimal"
                android:layout_weight="0.65" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.03"
            android:weightSum="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:text="INTEREST"
                android:id="@+id/textView12"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="#030b4c"
                android:layout_weight="0.28" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/t2"
                android:inputType="numberDecimal"
                android:layout_weight="0.64" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.03"
            android:weightSum="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:text="YEAR"
                android:id="@+id/textView"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="#030b4c"
                android:layout_weight="0.34" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/t3"
                android:inputType="numberDecimal"
                android:layout_weight="0.60" />
        </LinearLayout><![CDATA[

        Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CALCULATE"
            android:id="@+id/b1"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.03"
            android:textColor="#030438"
            android:background="#08f6f2" />

        ]]>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CLEAR"
            android:id="@+id/b2"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.03"
            android:textColor="#070435"
            android:background="#27e3e3" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="57dp"
                android:text="Interest+Total"
                android:id="@+id/textView2"
                android:layout_weight="0.06"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#050325" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="57dp"
                android:text=""
                android:id="@+id/v1"
                android:layout_weight="0.06"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#050325" />


               </LinearLayout>
    </LinearLayout>

</RelativeLayout>
